<Window x:Class="BudgetManager.View.Windows.HostoryOfOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager.View.Windows"
        xmlns:q="clr-namespace:BudgetManager.Data"
        mc:Ignorable="d"
        Title="HostoryOfOperationsWindow" Height="400" Width="500">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DGrid" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding HistoryOfOperations}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
