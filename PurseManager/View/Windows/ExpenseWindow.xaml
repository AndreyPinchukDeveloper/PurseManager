<Window x:Class="MyBudgetManager.View.ExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBudgetManager.View"
        mc:Ignorable="d"
        Title="ExpenseWindow" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200" Height="130">

            <TextBlock Text="Category"/>
            <ComboBox x:Name="cbExpenseCategory" Text=""/>
            <TextBlock Text="Amount of money"/>
            <TextBox x:Name="AmountOfMoney" Text=""/>
            <TextBlock Text="Note"/>
            <TextBox x:Name="Note" Text=""/>
        </StackPanel>

        <Button Grid.Row="1" Content="Add expense"/>
    </Grid>
</Window>
